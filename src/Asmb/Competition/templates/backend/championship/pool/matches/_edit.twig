{% set teamsCount = teams|length %}
{% if teamsCount > 1 %}
    {% set daysCount = (teamsCount is odd) ? teams|length : (teams|length - 1) %}
    {% set matchesCountPerDay = (teamsCount / 2)|round(0, 'floor') %}

    {{ form_start(form) }}
        <div class="clearfix">
        {% for day in 1..daysCount %}
            {% if loop.index0 % 4 == 0 or loop.first %}
                <div class="row">
            {% endif %}

            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <span class="pull-left">
                        {{ form_label(form['pool' ~ pool.id ~ '_day_' ~ day]) }}
                        </span>
                        <span class="pull-right">
                        {{ form_widget(form['pool' ~ pool.id ~ '_day_' ~ day]) }}
                        </span>
                    </div>

                    <div class="panel-body">
                        <table class="table table-condensed table-matches">
                            {% set dateOfDay = (form.vars.value.days['day_' ~ day] is defined) ? form.vars.value.days['day_' ~ day] : '' %}
                            <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th>{{ __('page.edit-pool-matches.time') }}</th>
                                <th>{{ __('page.edit-pool-matches.home_team') }}</th>
                                <th>{{ __('page.edit-pool-matches.visitor_team') }}</th>
                                <th></th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for matchPosition in 1..matchesCountPerDay %}
                                <tr>
                                    <td class="text-center">
                                        {# Check if we have a specific date for the match #}
                                        {% set matchDate = (form.vars.value.matches['day_' ~ day][matchPosition] is defined) ? form.vars.value.matches['day_' ~ day][matchPosition].date : null %}
                                        {% if matchDate is null %}
                                            {% set showInfo = false %}
                                            {% set matchFormattedDate = '' %}
                                        {% else %}
                                            {% set showInfo = true %}
                                            {% set matchFormattedDate = matchDate|date("d/m/Y") %}
                                        {% endif %}

                                        <div class="info-pop{% if not showInfo %} hidden{% endif %}" data-html="true"
                                             data-content="{{ __('page.edit-match-date.info', {'%date%': '<span class="info-date-match" id="infoDateMatch-' ~ pool.id ~ '-' ~ day ~ '-' ~ matchPosition ~ '">' ~ matchFormattedDate ~ '</span>' }) }}">
                                            <i class="fa fa-calendar-o"></i>
                                        </div>
                                    </td>

                                    {# Time input #}
                                    <td class="text-left">
                                        {{ form_widget(form['pool' ~ pool.id ~ '_day_' ~ day ~ '_match_' ~ matchPosition ~ '_time'], {'attr': {'title': __('page.edit-match-date.set-hour')}}) }}
                                    </td>

                                    {# Teams input #}
                                    <td class="text-left">{{ form_widget(form['pool' ~ pool.id ~ '_day_' ~ day ~ '_match_' ~ matchPosition ~ '_home_team_id'], {'attr': {'class': 'select-team'}}) }}</td>
                                    <td>{{ form_widget(form['pool' ~ pool.id ~ '_day_' ~ day ~ '_match_' ~ matchPosition ~ '_visitor_team_id'], {'attr': {'class': 'select-team'}}) }}</td>

                                    {#Button / info about specific date for the match#}
                                    <td class="text-center">
                                        <a href="#editMatchModal-{{ pool.id ~ '-' ~ day ~ '-' ~ matchPosition }}"
                                           class="btn btn-xs btn-silent-danger"
                                           data-toggle="modal" title="{{ __('page.edit-match-date.title') }}">
                                            <i class="fa fa-calendar-plus-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {% if loop.index0 % 4 == 3 or loop.last %}
                </div>
            {% endif %}
        {% endfor %}
        </div>

    <div class="pull-right">
        {{ form_widget(form['pool' ~ pool.id ~ '_matches_save']) }}
    </div>

    {% for day in 1..daysCount %}
        {% for matchPosition in 1..matchesCountPerDay %}
            <div class="modal fade" id="editMatchModal-{{ pool.id ~ '-' ~ day ~ '-' ~ matchPosition }}"
                 tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        {{ include('@AsmbCompetition/championship/match/_modal-edit.twig', {
                            'pool': pool,
                            'day': day,
                            'matchPosition': matchPosition
                        }) }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_end(form) }}
{% endif %}
