{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'competition-menu' %}

{% block page_title __('general.phrase.championships') %}

{% block page_main %}
    <div class="competition-page-main">
        {% import '@bolt/_macro/_macro.twig' as macro %}

        <div class="row">
            <div class="col-md-12">
                <div class="pull-right mb-md">
                    <div class="btn-group">
                        {# Ajout d'une compétition #}
                        <a class="btn btn-default" href="{{ path('championshipedit', {'id': null}) }}">
                            <i class="fa fa-fw fa-plus"></i>
                            {{ __('panel.championship-actions.button.add') }}
                        </a>

                        {# Accès à l'édition des dates/heures des prochaines rencontres #}
                        <a class="btn btn-tertiary" href="{{ path('poolmeetingsedit') }}">
                            <i class="fa fa-fw fa-edit"></i>
                            {{ __('panel.championship-actions.button.edit-datetime') }}
                        </a>
                    </div>
                </div>

                {{ include('@AsmbCompetition/championship/_list.twig') }}
            </div>
        </div>
    </div>
{% endblock page_main %}
