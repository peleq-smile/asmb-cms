{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'championship-menu' %}

{% block page_title __('general.phrase.championships') %}

{% block page_main %}
    <div class="championship-index">
        {% import '@bolt/_macro/_macro.twig' as macro %}

        <div class="row">
            <div class="col-md-12">
                <div class="pull-right mb-md">
                    <a class="btn btn-default" href="{{ path('championshipedit', {'id': null}) }}">
                        <i class="fa fa-fw fa-plus"></i>
                        {{ __('panel.championship-actions.button.add') }}
                    </a>
                </div>

                {{ include('@AsmbCompetition/championship/_list.twig') }}
            </div>
        </div>

        <div class="mt-md row">
            <div class="col-md-12">
                <h2><strong>{{ __('page.index-championship.meetings-of-the-moment.title') }}</strong></h2>
                <p>{{ __('page.index-championship.meetings-of-the-moment.text') }}</p>
            </div>

            {{ include('@AsmbCompetition/championship/_meetings-of-the-moment.twig', {'meetings': lastMeetings, 'title': __('page.index-championship.last-meetings.title')}) }}
            {{ include('@AsmbCompetition/championship/_meetings-of-the-moment.twig', {'meetings': nextMeetings, 'title': __('page.index-championship.next-meetings.title')}) }}
        </div>
    </div>
{% endblock page_main %}
