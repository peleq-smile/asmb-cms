<div class="btn-group">

    {# Action: Enter match scores #}
    <a class="btn btn-default btn-xs hidden-xs"
       href="{{ path('championshipeditscores', {'id': championship.id}) }}">
        <i class="fa fa-calculator"></i> {{ __('general.phrase.enter-score') }}
    </a>

    <button type="button" class="btn dropdown-toggle btn-default btn-xs" data-toggle="dropdown">
        <i class="fa fa-info-sign"></i>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu pull-right">
        {# Action: Edit championship pools/teams/matchs #}
        <li>
            <form action="{{ path('championshipedit', {'id': championship.id}) }}" method="get">
                <button type="submit" class="btn btn-block btn-link">
                    <span class="pull-left"><i class="fa fa-edit"></i> {{ __('general.phrase.edit-championship') }}</span>
                </button>
            </form>
        </li>

        {# Action: Remove championship #}
        <li>
            <form action="{{ path('championshipdelete', {'id': championship.id}) }}" method="post">
                <button type="submit" class="btn btn-block btn-link confirm"
                        data-confirm="{{ __('general.phrase.confirm-delete-championship', { '%name%': championship.name ~ ' ' ~ championship.year }) }}">
                    <span class="pull-left"><i class="fa fa-trash"></i> {{ __('general.phrase.delete-championship') }}</span>
                </button>
            </form>
        </li>
    </ul>
</div>
