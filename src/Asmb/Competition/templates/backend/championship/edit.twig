{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'championship-menu' %}

{% if championship.name %}
    {% set championship_title = championship.name ~ ' ' ~ championship.year %}
{% else %}
    {% set championship_title = __('general.phrase.championship.all') %}
{% endif %}

{% block page_title championship_title %}

{% block page_main %}
    <div class="competition-edit">
        {% import '@bolt/_macro/_macro.twig' as macro %}

        {# Championship infos edit #}
        <div class="row">
            <div class="col-md-12">
                {{ include('@AsmbCompetition/championship/_edit-infos.twig', {'form': context.editForm}) }}
            </div>
        </div>

        {%  if context.addPoolForm is defined %}
        <div class="row">
            <div class="col-md-12">
                {{ include('@AsmbCompetition/championship/pool/_add.twig', {'form': context.addPoolForm}) }}
            </div>
        </div>
        {% endif %}

        {%  if poolsByCategoryName is defined %}
            {% for category_name, pools in poolsByCategoryName %}
                {% if pools is not empty %}
                    <fieldset>
                        <legend>{{ __('general.phrase.pools-of-category', {'%categoryName%': category_name}) }}</legend>

                        {% for pool in pools %}
                            {% if loop.index0 % 4 == 0 or loop.first %}
                                <div class="row small-gap">
                            {% endif %}

                            <div class="col-lg-3 col-xs-12">
                                {{ include('@AsmbCompetition/championship/pool/_edit-teams-matches.twig',
                                    {
                                        'teams': teamsByPool[pool.id],
                                        'addTeamsForm': context.addTeamsForms[pool.id],
                                    }) }}
                            </div>
                            {% if loop.index0 % 4 == 3 or loop.last %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </fieldset>
                {% endif %}
            {% endfor %}
        {% endif %}

        <div class="row form-group">
            <div class="col-md-12">
                <a href="{{ path('championship') }}" class="btn btn-default">
                    <i class="fa fa-chevron-circle-left"></i>
                    {{ __('general.phrase.back') }}
                </a>
            </div>
        </div>
    </div>
{% endblock page_main %}
