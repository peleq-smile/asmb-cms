{% form_theme form 'form_bolt_layout.twig' %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">{{ __('page.edit-match-date.title') }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <p>
                {{ __('page.edit-match-date.text', {
                    '%pool%': pool.short_name ? pool.short_name : pool.name , '%day%': day, '%position%': matchPosition
                }) }}
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-control-static">
                {{ form_widget(form['pool' ~ pool.id ~ '_day_' ~ day ~ '_match_' ~ matchPosition ~ '_date']) }}
                <button type="button" class="btn btn-primary" data-dismiss="modal">{{ __('page.edit.button.validate') }}</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <strong><i class="fa fa-info-circle"> </i> {{ __('general.phrase.championship_pool_matches_date.alert') }}
                </strong>
            </div>
        </div>
    </div>
</div>
