{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'competition-menu' %}

{% block page_title __('page.index-pool-meetings.title') %}

{% block page_main %}
    <div class="competition-page-main">
        {% import '@bolt/_macro/_macro.twig' as macro %}

        <div class="row">
            <div class="col-md-9">
                <p>{{ __('page.index-pool-meetings.meetings-of-the-moment.text') }}</p>
            </div>
            <div class="col-md-3">
                <div class="pull-right mb-md">
                    <div class="btn-group">
                        {# Accès à l'édition des dates/heures des prochaines rencontres #}
                        <a class="btn btn-tertiary" href="{{ path('poolmeetingsedit') }}">
                            <i class="fa fa-fw fa-edit"></i>
                            {{ __('panel.championship-actions.button.edit-datetime') }}
                        </a>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            {# Rencontres passées #}
            {{ include('@AsmbCompetition/pool-meetings/_meetings-by-date.twig', {
                'meetings': lastMeetings,
                'nDays': pastDays,
                'title': __('page.index-pool-meetings.last-meetings.title')
            }) }}

            {# Rencontres futures #}
            {{ include('@AsmbCompetition/pool-meetings/_meetings-by-date.twig', {
                'meetings': nextMeetings,
                'nDays': futureDays,
                'title': __('page.index-pool-meetings.next-meetings.title')
            }) }}
        </div>
    </div>
{% endblock page_main %}
