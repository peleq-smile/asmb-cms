{% form_theme form 'form_bolt_layout.twig' %}

<div class="panel panel-default">
    <div class="panel-body">
        {{ form_start(form) }}
        <table class="table-condensed">
            <thead>
            <tr>
                <th>
                    <label class="required" for="championship_edit_year">{{ __('general.phrase.year') }}</label>
                </th>
                <th>
                    <label class="required" for="championship_edit_name">{{ __('general.phrase.name') }}</label>
                </th>
                <th>
                    <label for="championship_edit_short_name">{{ __('general.phrase.short_name') }}</label>
                </th>
                <th>
                    <label class="required" for="championship_edit_is_active">{{ __('general.phrase.is_active') }}</label>
                </th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td class="name">
                    {{ form_widget(form.year) }}
                </td>

                <td class="year">
                    {{ form_widget(form.name) }}
                </td>

                <td class="short_name">
                    {{ form_widget(form.short_name) }}
                </td>

                <td>
                    {{ form_widget(form.is_active) }}
                </td>

                <td class="actions">
                    {{ form_widget(form.save) }}
                </td>
            </tr>
            </tbody>
        </table>
        {{ form_end(form) }}
    </div>
</div>
