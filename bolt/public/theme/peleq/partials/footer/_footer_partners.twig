{% setcontent partners = 'partner' where { status: 'published' } orderby 'id' %}

{% if partners is not empty %}
    {% for partner in partners %}
        <div class="sponsor">
            <a href="{{ partner.url }}" title="{{ partner.url_title }}"
               target="_blank" class="span">
                <span>{{ partner.subtitle }}</span>
            </a>
            <a href="{{ partner.url }}"
               target="_blank" class="logo"
               title="{{ partner.url_title }}">
                <img src="{{ partner.logo|thumbnail(240, 60, 'r') }}" alt="{{ partner.values.logo.title }}"
                     {% if partner.values.logo.class is not empty %} class="{{ partner.values.logo.class }}"{% endif %}/>
            </a>
        </div>
    {% endfor %}
{% endif %}


